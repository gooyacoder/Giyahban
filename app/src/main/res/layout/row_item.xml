<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="400dp"
        android:layout_height="150dp"
        android:paddingLeft="3dp"
        android:paddingTop="3dp"
        android:paddingRight="0dp"
        android:paddingBottom="3dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:elevation="10dp"
            app:cardCornerRadius="20dp">

            <ImageView
                android:id="@+id/imageViewPlant"
                android:layout_width="80dp"
                android:layout_height="95dp"
                android:contentDescription="plant image"
                android:scaleType="centerCrop"
                app:srcCompat="@mipmap/ic_launcher" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textViewPlantName"
            tools:layout_editor_absoluteX="175dp"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/cardView"
            android:fontFamily="casual"
            android:shadowColor="#004400"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="5"
            android:text="نام گیاه"
            android:textColor="#ccff00"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/water_reminder_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginRight="25dp"
            android:layout_toLeftOf="@id/textViewPlantName"
            android:text="آبیاری" />

        <TextView
            android:id="@+id/fertilizer_reminder_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/water_reminder_label"
            android:layout_marginTop="30dp"
            android:layout_marginRight="25dp"
            android:layout_toLeftOf="@id/textViewPlantName"
            android:text="کود" />

        <TextView
            android:id="@+id/fertilizer_tasks_list"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/water_reminder_label"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="25dp"
            android:layout_toLeftOf="@id/fertilizer_reminder_label"
            android:text="لیست کودهای گیاه" />

        <ImageView
            android:id="@+id/watering_reminder_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/water_reminder_label"
            android:contentDescription="water today"
            android:visibility="invisible"
            app:srcCompat="@android:drawable/ic_menu_add" />

    </RelativeLayout>
</LinearLayout>