<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:paddingLeft="3dp"
    android:paddingTop="3dp"
    android:paddingRight="0dp"
    android:paddingBottom="3dp"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:elevation="10dp"
        app:cardCornerRadius="20dp">

        <ImageView
            android:id="@+id/imageViewPlant"
            android:layout_width="80dp"
            android:layout_height="95dp"
            android:contentDescription="plant image"
            android:scaleType="centerCrop"
            app:srcCompat="@mipmap/ic_launcher"
            />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textViewPlantName"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/cardView"
        android:fontFamily="casual"
        android:layout_marginRight="5dp"
        android:shadowColor="#004400"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="5"
        android:textColor="#ccff00"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="175dp"
        android:text="نام گیاه"/>

    <TextView
        android:id="@+id/water_reminder_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginRight="25dp"
        android:text="آبیاری"
        android:layout_toLeftOf="@id/textViewPlantName"/>

    <TextView
        android:id="@+id/fertilizer_reminder_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginRight="25dp"
        android:text="کود"
        android:layout_below="@id/water_reminder_label"
        android:layout_toLeftOf="@id/textViewPlantName"/>

    <TextView
        android:id="@+id/fertilizer_tasks_list"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="25dp"
        android:layout_below="@id/water_reminder_label"
        android:layout_toLeftOf="@id/fertilizer_reminder_label"
        android:text="لیست کودهای گیاه"/>

    <ImageView
        android:id="@+id/watering_reminder_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:contentDescription="water today"
        android:layout_toLeftOf="@id/water_reminder_label"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        app:srcCompat="@drawable/img"
        />



</RelativeLayout>